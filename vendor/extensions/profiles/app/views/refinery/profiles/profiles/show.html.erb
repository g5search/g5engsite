<div class="wrap">
  <section id='body_content'>
    <section id='body_content_left'>
      <h1><%=raw @profile.name %> - <%=raw @profile.title %></h1>
  		<%= image_fu @profile.picture, nil %>
      <%= raw @profile.bio %>
    </section>

    <section id='body_content_right'>
      <div id="the_team">
        <h2>The Team</h2>
        <ul id="profiles">
          <% @profiles.each do |profile| %>
            <li>
              <%= link_to "#{profile.name} - #{profile.title}", refinery.profiles_profile_path(profile) %>
            </li>
          <% end %>
        </ul>
      </div>
    </section>
  </section>
</div>
