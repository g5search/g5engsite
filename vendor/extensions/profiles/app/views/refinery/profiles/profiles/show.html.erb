<div class="wrap">
  <section id='body_content'>
    <h1><%=raw @profile.name %> - <%=raw @profile.title %></h1>
		<%= image_fu @profile.picture, nil %>
    <%= raw @profile.bio %>
  </section>

  <section id='side_body_content'>
    <h2>The Team</h2>
    <ul id="profiles">
      <% @profiles.each do |profile| %>
        <li>
          <%= link_to "#{profile.name} - #{profile.title}", refinery.profiles_profile_path(profile) %>
        </li>
      <% end %>
    </ul>
  </section>
</div>
