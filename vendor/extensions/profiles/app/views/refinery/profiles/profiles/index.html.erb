<div class="wrap">
	<section id='profiles'>
		<h1>Meet The Team</h1>
	  <% @profiles.each do |profile| %>
      <div class="profile-thumb">
			<%= link_to(refinery.profiles_profile_path(profile)) do %>
      	<%= image_fu profile.picture, nil %><br />
				<%= profile.name %><br />
				<%= profile.title %>
      <% end %>
			</div>
    <% end %>
	</section>
</div>