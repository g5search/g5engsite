<ul>
  <% if ::Refinery::Profiles::Admin::ProfilesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.profiles_admin_profiles_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_profiles_admin_profile_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Profiles::Admin::ProfilesController.sortable? && ::Refinery::Profiles::Profile.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Profiles"),
                 refinery.profiles_admin_profiles_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Profiles"),
                 refinery.profiles_admin_profiles_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
