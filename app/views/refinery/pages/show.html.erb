<div class="wrap">
	
	<section id='body_content'>
		<section id='body_content_left'>
	  	<%=raw @page.content_for(:body) %>
  	</section>
	
	<% if @page.images.present? %>
		<section id='side_image'>
      <% @page.images.each do |image| %>
        <%= image_tag(image.url) %>
      <% end %>
		</section>
	<% end %>
	
	<% if @page.content_for(:side_body) %>
		<section id='body_content_right'>
	  	<%=raw @page.content_for(:side_body) %>
		</section>
	<% end %>
	</section>
	
</div>